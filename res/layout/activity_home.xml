<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/home_music_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openAudioIntent"
            android:text="Music" />

        <Button
            android:id="@+id/home_video_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openVideoIntent"
            android:text="Video" />

        <Button
            android:id="@+id/home_pictures_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openPicturesIntent"
            android:text="Pictures" />

        <Button
            android:id="@+id/home_remote_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openRemoteIntent"
            android:text="Remote" />

    </LinearLayout>

</RelativeLayout>
