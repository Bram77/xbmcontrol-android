<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

	<TableLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/black_striped_background" >
	
	    <TableRow
	        android:id="@+id/tableRow5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	    </TableRow>
	
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_weight="0"
	        android:gravity="center_horizontal" >
	
	        <Button
	            android:id="@+id/remote_up_button"
	            style="@style/ButtonTextNegative"
	            android:layout_width="50dp"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button_shape_negative"
	            android:onClick="remoteUp"
	            android:paddingBottom="20dp"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:paddingTop="20dp"
	            android:text="@string/up" />
	
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal" >
	
	        <Button
	            android:id="@+id/remote_left_button"
	            style="@style/ButtonTextNegative"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/button_shape_negative"
	            android:onClick="remoteLeft"
	            android:paddingBottom="20dp"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:paddingTop="20dp"
	            android:text="Left" />
	
	        <Button
	            android:id="@+id/remote_select_button"
	            style="@style/ButtonTextPositve"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button_shape_positive"
	            android:onClick="remoteSelect"
	            android:paddingBottom="20dp"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:paddingTop="20dp"
	            android:text="Select" />
	
	        <Button
	            android:id="@+id/remote_right_button"
	            style="@style/ButtonTextNegative"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button_shape_negative"
	            android:onClick="remoteRight"
	            android:paddingBottom="20dp"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:paddingTop="20dp"
	            android:text="Right" />
	
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal" >
	
	        <Button
	            android:id="@+id/remote_down_button"
	            style="@style/ButtonTextNegative"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button_shape_negative"
	            android:onClick="remoteDown"
	            android:paddingBottom="20dp"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:paddingTop="20dp"
	            android:text="Down" />
	
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow4"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="60dp"
	        android:layout_weight="1"
	        android:gravity="center_horizontal" >
	
	        <Button
	            android:id="@+id/remote_back_button"
	            style="@style/ButtonTextPositve"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/button_shape_positive"
	            android:onClick="remoteBack"
	            android:text="back" />
	
	        <Button
	            android:id="@+id/remote_context_menu_button"
	            style="@style/ButtonTextPositve"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button_shape_positive"
	            android:onClick="remoteContextMenu"
	            android:text="menu" />
	
	        <Button
	            android:id="@+id/remote_info_button"
	            style="@style/ButtonTextPositve"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button_shape_positive"
	            android:onClick="remoteInfo"
	            android:text="info" />
	
	        <Button
	            android:id="@+id/remote_home_button"
	            style="@style/ButtonTextPositve"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button_shape_positive"
	            android:onClick="remoteHome"
	            android:text="home" />
	
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/navigation_container"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="bottom|center_horizontal"
	        android:layout_weight="0"
	        android:gravity="bottom|center_horizontal"
	        android:paddingBottom="5dp"
	        android:paddingTop="5dp" >
	        
	        <TableLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="0dp"
		    android:layout_weight="1" >
		
		    <TableRow
		        android:id="@+id/tableRow10"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:layout_weight="1"
		        android:gravity="center_horizontal" >
		
		        <Button
		            android:id="@+id/navigation_music"
		            style="@style/ButtonTextNegative"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal|center_vertical"
		            android:layout_margin="0dp"
		            android:layout_weight="1"
		            android:background="@drawable/button_shape_negative"
		            android:onClick="openAudioIntent"
		            android:text="Music" />
		
		        <Button
		            android:id="@+id/navigation_video"
		            style="@style/ButtonTextNegative"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal|center_vertical"
		            android:layout_margin="0dp"
		            android:layout_weight="1"
		            android:background="@drawable/button_shape_negative"
		            android:onClick="openVideoIntent"
		            android:text="Videos" />
		
		        <Button
		            android:id="@+id/navigation_pictures"
		            style="@style/ButtonTextNegative"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal|center_vertical"
		            android:layout_margin="0dp"
		            android:layout_weight="1"
		            android:background="@drawable/button_shape_negative"
		            android:onClick="openPicturesIntent"
		            android:paddingBottom="15dp"
		            android:paddingTop="15dp"
		            android:text="Pictures" />
		
		        <Button
		            android:id="@+id/navigation_remote"
		            style="@style/ButtonTextPositve"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal|center_vertical"
		            android:layout_margin="0dp"
		            android:layout_weight="1"
		            android:background="@drawable/button_shape_positive"
		            android:onClick="openRemoteIntent"
		            android:paddingBottom="15dp"
		            android:text="Remote" />
		
		    </TableRow>
		</TableLayout>
	
	    </TableRow>
	
	</TableLayout>
</RelativeLayout>