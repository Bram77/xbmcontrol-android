<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android1:background="@drawable/text_view_rounded_corners"
    android1:padding="5dp" >

    <ImageView
        android1:id="@+id/recently_added_movie_thumbnail"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_gravity="center_horizontal|center_vertical"
        android1:layout_margin="2dp"
        android1:src="@drawable/play_button_200" />

    <TextView
        android1:id="@+id/recently_added_movie_title"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_gravity="center_horizontal"
        android1:layout_margin="2dp"
        android1:text="Movie title"
        android1:textColor="#FFFFFF"
        android1:textSize="10dp" />

</LinearLayout>
