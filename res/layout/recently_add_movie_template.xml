<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android1:layout_weight="0.33"
    android:orientation="vertical"
    android1:paddingLeft="5dp"
    android1:paddingRight="5dp"
    android1:visibility="visible" >

    <TextView
        android1:id="@+id/recently_added_movie_title"
        android1:layout_width="105dp"
        android1:layout_height="wrap_content"
        android1:layout_margin="2dp"
        android1:ellipsize="end"
        android1:gravity="center_horizontal"
        android1:lines="1"
        android1:scrollHorizontally="true"
        android1:text="title"
        android1:textColor="#BBBBBB"
        android1:textSize="10dp"
        android1:textStyle="bold" />

    <ImageView
        android1:id="@+id/recently_added_movie_thumbnail"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_gravity="center_horizontal|center_vertical"
        android1:layout_margin="2dp"
        android1:src="@drawable/play_button_200" />

    <TextView
        android1:id="@+id/recently_added_episode"
        android1:layout_width="105dp"
        android1:layout_height="wrap_content"
        android1:layout_margin="2dp"
        android1:ellipsize="end"
        android1:gravity="center_horizontal"
        android1:lines="1"
        android1:scrollHorizontally="true"
        android1:text=""
        android1:textColor="#BBBBBB"
        android1:textSize="10dp" />

</LinearLayout>
